# Alpaca API Configuration
# Get your keys from: https://alpaca.markets/
ALPACA_API_KEY_ID=your_api_key_here
ALPACA_API_SECRET_KEY=your_secret_key_here
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets/v2

# Trading Configuration
PAPER_TRADING=true  # Set to 'false' for live trading (NOT RECOMMENDED)

# Strategy Configuration (choose ONE):
# Option 1: Use a fixed risk profile
RISK_LEVEL=moderate  # Options: very_conservative, conservative, moderate, aggressive, aggressive_growth

# Option 2: Use a target date fund (future feature)
# TARGET_YEAR=2055

# Logging Configuration (optional)
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
